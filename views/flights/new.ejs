<%- include('../partials/header') %>
<!DOCTYPE html>
<html>
  <head>
    <title>Add a new flight</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <form id="new-form" action="/flights" method="post">
      <label>Airline:
        <input type="text" name="airline">
      </label><br>
      <label>Airport:
        <input type="text" name="airport">
      </label><br>
      <label>Flight Number:
        <input type="number" name="flightNo">
      </label><br>
      <label>Depart:
        <input type="date" name="departs">
      </label><br>
      <label for="flightDeparture">Flight Departure</label>
      <input type="datetime-local" id="departure-time"
        name="meeting-time" value="2018-06-12T19:30"
        min="2018-06-07T00:00" max="2018-06-14T00:00">

      <label for="airport">Airport:</label>
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="HNL">HNL</option>
        <option value="OAK" selected>OAK</option>
        <option value="SAN">SAN</option>
        <option value="LAX">LAX</option>
      </select>

      <label for="airline">Airline:</label>
      <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
        <option value="Emirates">Emirates</option>
        <option value="Hawaiian">Hawaiian</option>
      </select>

      <button type="submit">Search Your Next Vacay</button>
    </form>
  </body>
</html>