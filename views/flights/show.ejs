<%- include('../partials/header')%>
<h2>Flight</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Depart</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= flight.airline %></td>
      <td><%= flight.airport %></td>
      <td><%= flight.flightNo %></td>
      <td><%= flight.departs %></td>
    </tr>
  </tbody>
  </table>


  <h2>Add a Destination</h2>
  <form id="depart-form" action="/flights/<%= flight._id%>/destinations" method="post">
    <label>Airport:
        <select name="airport">
          <option value="AMS">AMS</option>
          <option value="YYZ">YYZ</option>
          <option value="SEA">SEA</option>
          <option value="MIA">MIA</option>
        </select>
    </label><br>
    <label>Arrival:
      <input type="datetime-local" name="arrival">
    </label><br>
    <button type="submit">Add Destination </button>
    </form>

    <div>
      <% if (flight.destination.length) { %>
        <% flight.destination.forEach((destination) => { %>
            <div>
              <%= destination.airport %>
            </div>
            <div>
              <%= destination.arrival %>
            </div>
        <% }); %>
      <% } %>

   </div>
   <%- include('../partials/footer')%>

   